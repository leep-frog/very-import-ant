{
  "name": "very-import-ant",
  "displayName": "Very Import-ant",
  "description": "Automatically add Python import statements",
  "icon": "logo.png",
  "version": "0.0.15",
  "preview": true,
  "serverInfo": {
    "name": "Very Import-ant",
    "module": "very-import-ant"
  },
  "publisher": "groogle",
  "license": "MIT",
  "homepage": "https://github.com/leep-frog/very-import-ant",
  "repository": {
    "type": "git",
    "url": "https://github.com/leep-frog/very-import-ant.git"
  },
  "resolutions": {
    "terser-webpack-plugin": "5.3.1",
    "webpack-cli": "2.0.4"
  },
  "bugs": {
    "url": "https://github.com/leep-frog/very-import-ant/issues"
  },
  "galleryBanner": {
    "color": "#1e415e",
    "theme": "dark"
  },
  "keywords": [
    "python",
    "very-import-ant"
  ],
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "extensionDependencies": [
    "ms-python.python"
  ],
  "capabilities": {
    "virtualWorkspaces": {
      "supported": false,
      "description": "Virtual Workspaces are not supported with Very Import-ant."
    }
  },
  "activationEvents": [
    "onLanguage:python",
    "workspaceContains:*.py"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool source-map --config ./webpack.config.js",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "format-check": "prettier --check 'src/**/*.ts' 'build/**/*.yml' '.github/**/*.yml'",
    "test": "node ./out/test/runTest.js",
    "vsce-package": "vsce package -o very-import-ant.vsix"
  },
  "contributes": {
    "configuration": {
      "properties": {

        "very-import-ant.onTypeTriggerCharacters": {
          "description": "The set of characters that, when typed, will trigger the formatter to run. Note that this is only relevant if the following settings are configured (either globally or in the `[python]` section:\n\n{\n  \"editor.formatOnType\": true,\n  \"editor.defaultFormatter\": \"groogle.very-import-ant\"\n}",
          "default": "\n",
          "type": "string"
        },
        "very-import-ant.autoImports": {
          "default": [
            {
              "variable": "pd",
              "import": "import pandas as pd"
            },
            {
              "variable": "np",
              "import": "import numpy as np"
            },
            {
              "variable": "xr",
              "import": "import xarray as xr"
            },
            {
              "variable": "xrt",
              "import": "from xarray import testing as xrt"
            }
          ],
          "description": "The set of auto-imports to consider when formatting a python file",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "variable": {
                "description": "Name of the variable which, when undefined in a python file, will trigger an auto-import",
                "type": "string"
              },
              "import": {
                "description": "The import statement to be included when the associated variable is undefined in a python file",
                "type": "string"
              }
            }
          }
        },

        "very-import-ant.interpreter": {
          "default": [],
          "description": "When set to a path to python executable, extension will use that to launch the server and any subprocess.",
          "scope": "resource",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "very-import-ant.showNotifications": {
          "default": "off",
          "description": "Controls when notifications are shown by this extension.",
          "enum": [
            "off",
            "onError",
            "onWarning",
            "always"
          ],
          "enumDescriptions": [
            "All notifications are turned off, any errors or warning are still available in the logs.",
            "Notifications are shown only in the case of an error.",
            "Notifications are shown for errors and warnings.",
            "Notifications are show for anything that the server chooses to show."
          ],
          "scope": "machine",
          "type": "string"
        }
      }
    },
    "commands": [
      {
        "title": "Restart Server",
        "category": "Very Import-ant",
        "command": "very-import-ant.restart"
      }
    ]
  },
  "dependencies": {
    "@vscode/python-extension": "^1.0.5",
    "fs-extra": "^11.2.0",
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/vscode": "1.78.0",
    "@types/glob": "^8.1.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
